<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %> </div>
        <% } %>
        <% if(editing) { %>
            <form class="product-form" action="/admin/edit-product" method="POST" enctype="multipart/form-data">
        <% } else { %>
            <form class="product-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
        <% } %>
        <form class="product-form" action="/admin/edit-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= prod.title %>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= prod.imageUrl %>">
            </div> -->
            <div class="form-control">
                <label for="image">Image URL</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= prod.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" value="<%= prod.price %>"><%= prod.description %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <% if(editing) { %>
                <input  name="productId" id="productId" type="hidden" value="<%= prod._id %>">
                <button class="btn" type="submit">Edit Product</button>
            <% } else { %>
                <button class="btn" type="submit">Add Product</button>
            <% } %>
        </form>
    </main>
<%- include('../includes/end.ejs') %>